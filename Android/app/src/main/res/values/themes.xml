<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VexTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua1</item>
        <item name="colorPrimaryVariant">@color/aqua2</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightShade</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/lightShade</item>
        <item name="colorOnBackground">@color/lightFG</item>

        <item name="android:windowBackground">@color/lightBG</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
</resources>