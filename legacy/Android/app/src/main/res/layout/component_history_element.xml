<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_element_root">

        <ImageView
            android:id="@+id/history_element_map_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/history_element_title"
            android:layout_alignBottom="@id/history_element_data_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/history_entry_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/history_element_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:text="@string/history_entry_title_placeholder"
            android:textColor="@color/history_entry_tint"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/history_element_data_layout"
            android:layout_below="@id/history_element_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/history_element_xp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/history_entry_tint"
                android:text="@string/history_entry_xp_placeholder" />

            <TextView
                android:id="@+id/history_element_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/history_entry_tint"
                android:text="@string/history_entry_time_placeholder"/>
        </LinearLayout>

        <TextView
            android:id="@+id/history_element_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/history_element_title"
            android:layout_alignBottom="@id/history_element_data_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:text="@string/history_entry_map_placeholder"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>