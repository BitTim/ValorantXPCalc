<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VexTrack.MVVM.Model">
    
    <Style TargetType="{x:Type local:ContractButtonModel}"
           BasedOn="{StaticResource {x:Type Button}}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:ContractButtonModel}">
                        <Grid Height="Auto"
                              Margin="8, 0, 8, 0"
                              VerticalAlignment="Center">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Contract Title"
                                       Foreground="{DynamicResource Foreground}"
                                       FontSize="20"
                                       FontWeight="Bold" />

                            <local:SegmentedProgressModel Grid.Row="1"
                                                          Value="{Binding Progress}"
                                                          Color="{Binding Color}" />

                            <WrapPanel Grid.Row="2">
                                <StackPanel Orientation="Horizontal"
                                            Margin="0, 0, 16, 0">
                                    <TextBlock Text="{Binding Collected}"
                                               FontSize="14"
                                               Margin="0, 0, 4, 0"
                                               Foreground="{DynamicResource Foreground}" />

                                    <TextBlock Text="/"
                                               FontSize="14"
                                               Margin="0, 0, 4, 0"
                                               Foreground="{DynamicResource Foreground}" />

                                    <local:TextWithUnit Text="{Binding Total}"
                                                        Unit="XP"
                                                        FontSize="14"
                                                        Foreground="{DynamicResource Foreground}" />
                                </StackPanel>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Remaining: "
                                               FontSize="14"
                                               Foreground="{DynamicResource Foreground}" />

                                    <TextBlock Text="{Binding Remaining}"
                                               FontSize="14"
                                               Foreground="{DynamicResource Foreground}" />
                                </StackPanel>
                            </WrapPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>