<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<SolidColorBrush x:Key="Background" Color="{StaticResource DarkBG}"/>
	<SolidColorBrush x:Key="Shade" Color="{StaticResource DarkShade}"/>
	<SolidColorBrush x:Key="Foreground" Color="{StaticResource DarkFG}"/>

	<LinearGradientBrush x:Key="AccMono">
		<GradientStop Color="{StaticResource MonoDark1}" Offset="0.0"/>
		<GradientStop Color="{StaticResource MonoDark2}" Offset="1.0"/>
	</LinearGradientBrush>
</ResourceDictionary>